<div>
  <p style="text-align: right;">
    <% if current_user.present? %>
      <%= link_to '退出', logout_path %>
      <% if current_user.post.present? %>
        <%= link_to '我的博客', post_path(current_user.post) %>
      	<%= link_to '我的文章', articles_path %>
      <% else %>
      	<%= link_to '开通博客', new_post_path %>
      <% end %>
    <% else %>
      <%= link_to '登陆', login_path %>
    <% end %>
  </p>
</div>