
<% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_for @user, method: :post do |f| %>
  邮箱：<%= f.text_field :email %><br />
  密码：<%= f.password_field :password %><br />
  确认密码：<%= f.password_field :password_confirmation %><br />
  <%= f.submit('注册') %>
<% end %>
<p><%= link_to '登陆', login_path %></p>
