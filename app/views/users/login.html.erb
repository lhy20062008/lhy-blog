<div class='container'>
  <div class='col-xs-12 col-sm-8 col-sm-offset-2 col-md-offset-3 col-lg-offset-3 col-md-6 col-lg-6'>
    <div class='register'>
    <% if flash[:notice] %>
      <div class="alert alert-danger alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
          <%= flash[:notice] %>
       </div>
    <% end %>
    <%= form_tag(login_path, method: 'post', class: 'simple_form')  do %>
      <div class='form-group'>
      <%= email_field_tag :email, '', class: 'form-control validate[required,custom[email]]',autocomplete: 'off' %>
      </div>
      <div class='form-group'>
        <%= password_field_tag :password, '', class: 'form-control validate[required]', autocomplete: 'off' %>
      </div>
      <div class='form-group'>
        <%= submit_tag 'LOGIN', class: 'form-control btn btn-primary' %>
      </div>
    <% end %>
    <p>
      <span class='pull-right'><%=link_to t(:register), register_path %></span>
    </p>
    </div>
  </div>
</div>