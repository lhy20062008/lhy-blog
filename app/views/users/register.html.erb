<div class='container'>
  <div class='col-xs-12 col-sm-8 col-sm-offset-2 col-md-offset-3 col-lg-offset-3 col-md-6 col-lg-6'>
    <div class='register'>
    <%= simple_form_for @user do |f| %>
      <%= f.input :email, label: '邮箱地址', html5: true, input_html: {'class': 'validate[required,custom[email]]'} %>
      <%= f.input :password, label: '密码', html5: true, input_html: {'class': 'validate[required,minSize[6],maxSize[20]]'} %>
      <%= f.input :password_confirmation, label: '确认密码', html5: true, input_html: {'class': 'validate[equals[user_password]]'} %>
      <%= f.button :submit, value: 'submit' ,class: 'member-submit btn-primary' %>
    <% end %>
    <p class='pull-right'><%= link_to t(:login), login_path %></p>
    </div>
  </div>
</div>
